---
import { SITE_CONFIG } from '@/lib/constants';

interface Props {
  variant?: 'default' | 'income' | 'professional' | 'learning';
}

const { variant = 'default' } = Astro.props;

// Customize title based on variant
const titles = {
  default: 'Apa yang Anda Dapatkan?',
  income: 'Investasi Sekali, Manfaat Seumur Hidup',
  professional: 'Paket Professional Lengkap',
  learning: 'Materi & Tools Pembelajaran Komprehensif',
};

const subtitles = {
  default: 'Paket lengkap untuk kesuksesan Anda sebagai Licensed Promotor STIFIn',
  income: '8 benefit bernilai tinggi untuk memaksimalkan potensi penghasilan Anda',
  professional: 'Sertifikasi, tools, dan support system untuk praktisi professional',
  learning: 'Semua yang Anda butuhkan untuk menjadi expert kepribadian & potensi',
};
---

<section class="py-16 md:py-20 bg-gradient-to-b from-white to-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="inline-block bg-primary-100 text-primary-700 px-6 py-2 rounded-full text-sm font-semibold mb-4">
          Paket Lengkap
        </div>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-4">
          {titles[variant]}
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          {subtitles[variant]}
        </p>
      </div>

      <!-- Grid Benefits -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {SITE_CONFIG.business.whatYouGet.map((item, index) => (
          <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-xl transition-all duration-300 border-t-4 border-primary-600">
            <div class="text-4xl mb-4">{item.icon}</div>
            <div class="flex items-start space-x-2 mb-3">
              <div class="flex-shrink-0 w-6 h-6 bg-primary-100 text-primary-700 rounded-full flex items-center justify-center font-bold text-sm">
                {index + 1}
              </div>
              <h3 class="font-bold text-lg text-gray-900 flex-1">{item.title}</h3>
            </div>
            <p class="text-gray-700 text-sm leading-relaxed">
              {item.description}
            </p>
          </div>
        ))}
      </div>

      <!-- Bottom Note -->
      <div class="mt-10 bg-gradient-to-r from-green-600 via-teal-600 to-cyan-600 rounded-2xl p-8 text-white text-center">
        <h3 class="font-bold text-2xl mb-3">Investasi Sekali, Untung Berkali-kali!</h3>
        <p class="text-lg text-white/90 max-w-2xl mx-auto">
          Semua benefit di atas Anda dapatkan dengan <strong>investasi satu kali seumur hidup</strong>.
          ID Aplikasi dan lisensi Anda berlaku permanen tanpa biaya perpanjangan.
        </p>
      </div>
    </div>
  </div>
</section>
