---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SEOHead from '@/components/SEOHead.astro';
import SchemaOrg from '@/components/SchemaOrg.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description: string;
  keywords?: string[];
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
  schemaType?: 'LocalBusiness' | 'Organization';
  location?: {
    kecamatan: string;
    provinsi: string;
    coordinates?: { lat: number; lng: number };
  };
}

const {
  title,
  description,
  keywords,
  canonical,
  ogImage,
  noindex = false,
  schemaType = 'Organization',
  location,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <SEOHead
      title={title}
      description={description}
      keywords={keywords}
      canonical={canonical}
      ogImage={ogImage}
      noindex={noindex}
    />
    <SchemaOrg type={schemaType} location={location} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
