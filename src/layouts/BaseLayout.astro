---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SEOHead from '@/components/SEOHead.astro';
import SchemaOrg from '@/components/SchemaOrg.astro';
import SocialProofPopup from '@/components/SocialProofPopup.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description: string;
  keywords?: string[];
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
  schemaType?: 'LocalBusiness' | 'Organization';
  location?: {
    kecamatan: string;
    provinsi: string;
    coordinates?: { lat: number; lng: number };
  };
}

const {
  title,
  description,
  keywords,
  canonical,
  ogImage,
  noindex = false,
  schemaType = 'Organization',
  location,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <SEOHead
      title={title}
      description={description}
      keywords={keywords}
      canonical={canonical}
      ogImage={ogImage}
      noindex={noindex}
    />
    <SchemaOrg type={schemaType} location={location} />
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-008R0THXPL"></script>
    <script>
      {`
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-008R0THXPL');
      `}
    </script>
    <!-- Meta Pixel -->
    <script>
      {`
        !(function(f,b,e,v,n,t,s){
          if(f.fbq)return;n=f.fbq=function(){n.callMethod?
          n.callMethod.apply(n,arguments):n.queue.push(arguments)};
          if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
          n.queue=[];t=b.createElement(e);t.async=!0;
          t.src=v;s=b.getElementsByTagName(e)[0];
          s.parentNode.insertBefore(t,s)
        })(window, document,'script','https://connect.facebook.net/en_US/fbevents.js');
        fbq('init', '3848505155443685');
        fbq('track', 'PageView');
      `}
    </script>
    <noscript>
      <img height="1" width="1" style="display:none" src="https://www.facebook.com/tr?id=3848505155443685&ev=PageView&noscript=1" />
    </noscript>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />

    <!-- Social Proof Popup Notification -->
    <SocialProofPopup />
  </body>
</html>
