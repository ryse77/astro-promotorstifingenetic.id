---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';
import BenefitsSection from '@/components/BenefitsSection.astro';
import { SITE_CONFIG } from '@/lib/constants';
import { generateGeneralWhatsAppURL } from '@/lib/whatsapp';
import citiesData from '@/lib/data/cities.json';

// Get all locations untuk list kota
const locations = citiesData;

// Group by provinsi
const locationsByProvinsi = locations.reduce((acc, location) => {
  const provinsi = location.provinsi;
  if (!acc[provinsi]) {
    acc[provinsi] = [];
  }
  acc[provinsi].push(location);
  return acc;
}, {} as Record<string, typeof locations>);

const waUrl = generateGeneralWhatsAppURL();
---

<BaseLayout
  title="Beranda"
  description={SITE_CONFIG.description}
  schemaType="Organization"
>
  <!-- Hero Section -->
  <Hero
    title="Peluang Bisnis Promotor Tes STIFIn Genetic"
    subtitle="Raih Penghasilan Unlimited"
    description="Bergabung sebagai promotor STIFIn dan dapatkan komisi hingga 60%. Training gratis, support penuh, bisnis terbukti menguntungkan!"
    ctaText="Daftar Sekarang"
    ctaUrl={waUrl}
  />

  <!-- Benefits Section -->
  <BenefitsSection />

  <!-- Tentang STIFIn Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-4">
            Apa Itu STIFIn Genetic Test?
          </h2>
          <p class="text-xl text-gray-600">
            Metode ilmiah untuk mengenali potensi diri melalui sidik jari
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div class="bg-primary-50 rounded-xl p-6">
            <div class="w-12 h-12 bg-primary-600 text-white rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="font-bold text-xl text-gray-900 mb-2">Berbasis Ilmiah</h3>
            <p class="text-gray-700">
              STIFIn (Science of Talents through Fingerprint) adalah metode tes genetic yang telah teruji
              dan diakui secara ilmiah untuk mengenali potensi bawaan seseorang.
            </p>
          </div>

          <div class="bg-secondary-50 rounded-xl p-6">
            <div class="w-12 h-12 bg-secondary-600 text-white rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"></path>
              </svg>
            </div>
            <h3 class="font-bold text-xl text-gray-900 mb-2">Membantu Banyak Orang</h3>
            <p class="text-gray-700">
              Ribuan keluarga telah terbantu menemukan potensi terbaik mereka. Sebagai promotor,
              Anda ikut berkontribusi positif sambil mendapat penghasilan.
            </p>
          </div>
        </div>

        <div class="text-center">
          <a
            href="/tentang"
            class="inline-block text-primary-600 font-semibold hover:text-primary-700 transition"
          >
            Pelajari Lebih Lanjut â†’
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Lokasi Tersedia Section -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-4">
          Daftar Berdasarkan Lokasi Anda
        </h2>
        <p class="text-xl text-gray-600">
          Pilih kota Anda untuk informasi lebih detail dan pendaftaran
        </p>
      </div>

      <div class="max-w-5xl mx-auto">
        {Object.entries(locationsByProvinsi).slice(0, 5).map(([provinsi, locs]) => (
          <div class="mb-8">
            <h3 class="font-bold text-xl text-gray-900 mb-4">{provinsi}</h3>
            <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
              {locs.slice(0, 6).map((loc) => (
                <a
                  href={`/daftar-promotor-stifin/${loc.provinsiSlug}/${loc.slug}/`}
                  class="bg-white p-4 rounded-lg shadow hover:shadow-lg transition border-l-4 border-primary-600"
                >
                  <h4 class="font-semibold text-gray-900">{loc.kecamatan}</h4>
                  <p class="text-sm text-gray-600">{loc.kabupaten}</p>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-gray-600 mb-4">
          Total <span class="font-bold text-primary-600">{locations.length} lokasi</span> tersedia di seluruh Indonesia
        </p>
        <p class="text-sm text-gray-500">
          Tidak menemukan kota Anda? <a href={waUrl} class="text-primary-600 hover:text-primary-700 font-semibold">Hubungi kami</a>
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-gradient-to-r from-primary-600 to-secondary-600">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          Siap Memulai Bisnis Anda?
        </h2>
        <p class="text-xl md:text-2xl text-primary-100 mb-8">
          Bergabung sekarang dan raih penghasilan unlimited bersama STIFIn
        </p>

        <a
          href={waUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center space-x-3 bg-white text-primary-700 px-8 py-4 rounded-full font-bold text-lg hover:bg-primary-50 transition-all transform hover:scale-105 shadow-2xl"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>Hubungi via WhatsApp</span>
        </a>

        <p class="mt-6 text-primary-100 text-sm">
          WhatsApp: {SITE_CONFIG.whatsapp.displayNumber}
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
