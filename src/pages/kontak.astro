---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';
import { SITE_CONFIG } from '@/lib/constants';
import { generateGeneralWhatsAppURL } from '@/lib/whatsapp';

const waUrl = generateGeneralWhatsAppURL();
---

<BaseLayout
  title="Kontak Kami"
  description="Hubungi kami untuk informasi lebih lanjut tentang menjadi promotor STIFIn Genetic Test di seluruh Indonesia."
  schemaType="Organization"
>
  <Hero
    title="Hubungi Kami"
    subtitle="Kami Siap Membantu Anda"
    description="Punya pertanyaan tentang menjadi promotor STIFIn? Hubungi kami sekarang!"
  />

  <!-- Contact Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Info -->
          <div>
            <h2 class="text-2xl font-heading font-bold text-gray-900 mb-6">
              Informasi Kontak
            </h2>

            <div class="space-y-6">
              <!-- WhatsApp -->
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-green-100 text-green-600 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">WhatsApp</h3>
                  <p class="text-gray-700 mb-2">{SITE_CONFIG.whatsapp.displayNumber}</p>
                  <a
                    href={waUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-primary-600 hover:text-primary-700 font-semibold text-sm"
                  >
                    Chat Sekarang →
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-primary-100 text-primary-600 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
                  <a
                    href={`mailto:${SITE_CONFIG.email}`}
                    class="text-gray-700 hover:text-primary-600"
                  >
                    {SITE_CONFIG.email}
                  </a>
                </div>
              </div>

              <!-- Social Media -->
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-secondary-100 text-secondary-600 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Media Sosial</h3>
                  <div class="flex space-x-3">
                    <a
                      href={SITE_CONFIG.social.facebook}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-600 hover:text-primary-600"
                      aria-label="Facebook"
                    >
                      Facebook
                    </a>
                    <span class="text-gray-400">•</span>
                    <a
                      href={SITE_CONFIG.social.instagram}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-600 hover:text-primary-600"
                      aria-label="Instagram"
                    >
                      Instagram
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Jam Operasional -->
            <div class="mt-8 bg-gray-50 rounded-xl p-6">
              <h3 class="font-semibold text-gray-900 mb-4">Jam Operasional</h3>
              <div class="space-y-2 text-gray-700">
                <div class="flex justify-between">
                  <span>Senin - Jumat</span>
                  <span class="font-semibold">09:00 - 21:00 WIB</span>
                </div>
                <div class="flex justify-between">
                  <span>Sabtu - Minggu</span>
                  <span class="font-semibold">10:00 - 18:00 WIB</span>
                </div>
              </div>
              <p class="text-sm text-gray-600 mt-4">
                * Response WhatsApp biasanya dalam hitungan menit
              </p>
            </div>
          </div>

          <!-- FAQ Quick -->
          <div>
            <h2 class="text-2xl font-heading font-bold text-gray-900 mb-6">
              Pertanyaan Umum
            </h2>

            <div class="space-y-4">
              <div class="bg-white border border-gray-200 rounded-lg p-4">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Bagaimana cara mendaftar sebagai promotor?
                </h3>
                <p class="text-gray-700 text-sm">
                  Hubungi kami via WhatsApp, isi formulir pendaftaran, ikuti training gratis,
                  dan Anda siap memulai bisnis!
                </p>
              </div>

              <div class="bg-white border border-gray-200 rounded-lg p-4">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Apakah ada biaya pendaftaran?
                </h3>
                <p class="text-gray-700 text-sm">
                  Tidak ada biaya pendaftaran. Bergabung sebagai promotor STIFIn 100% gratis!
                </p>
              </div>

              <div class="bg-white border border-gray-200 rounded-lg p-4">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Berapa margin yang bisa didapat?
                </h3>
                <p class="text-gray-700 text-sm">
                  Margin keuntungan minimal 300% dari setiap tes STIFIn Fingerprint.
                  Tidak ada batasan income!
                </p>
              </div>

              <div class="bg-white border border-gray-200 rounded-lg p-4">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Apakah harus full time?
                </h3>
                <p class="text-gray-700 text-sm">
                  Tidak. Bisnis ini sangat fleksibel dan bisa dijalankan secara paruh waktu
                  sesuai waktu luang Anda.
                </p>
              </div>

              <div class="bg-white border border-gray-200 rounded-lg p-4">
                <h3 class="font-semibold text-gray-900 mb-2">
                  Wilayah mana saja yang tersedia?
                </h3>
                <p class="text-gray-700 text-sm">
                  Kami membuka peluang di seluruh Indonesia. Cek halaman beranda untuk melihat
                  daftar kota yang tersedia.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-gradient-to-r from-primary-600 to-secondary-600">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          Siap Untuk Memulai?
        </h2>
        <p class="text-xl md:text-2xl text-primary-100 mb-8">
          Hubungi kami sekarang dan mulai perjalanan Anda sebagai promotor STIFIn
        </p>

        <a
          href={waUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center space-x-3 bg-white text-primary-700 px-8 py-4 rounded-full font-bold text-lg hover:bg-primary-50 transition-all transform hover:scale-105 shadow-2xl"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>Chat via WhatsApp</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
